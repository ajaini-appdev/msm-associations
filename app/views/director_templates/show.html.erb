<h1>
  Director #<%= @director.id %> details
</h1>

<a href="/directors/<%= @director.id %>/edit">
  Edit director
</a>

<hr>

<dl>
  <dt>
    Dob
  </dt>
  <dd>
    <%= @director.dob %>
  </dd>

  <dt>
    Name
  </dt>
  <dd>
    <%= @director.name %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @director.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @director.image_url %>" width="320">
  </dd>
  
  <dt>
    Number of films
  </dt>
  <dd>
    <%= Movie.where(director_id: @director.id).count %>
  </dd>

</dl>

<a href="/delete_director/<%= @director.id %>" class="btn btn-danger">
  Delete director
</a>

<hr>

<a href="/directors">
  Go back
</a>

<div class="card mt-4">
  <div class="card-header">
    Filmography
  </div>
  <ul class="list-group list-group-flush">
    <% Movie.where(director_id: @director.id).each do |movie| %>
    <li class="list-group-item">
      <a href="/movies/<%=@director.id%>"><%= movie.title%></a>
    </li>
    <%end%>
  </ul>
</div>
